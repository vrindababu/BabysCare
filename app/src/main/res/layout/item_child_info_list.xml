<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/profile_image_size_setting_screen"
        android:layout_height="@dimen/profile_image_size_setting_screen"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="@dimen/profile_image_corner_radius_setting_screen">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image"
            tools:src="@drawable/baby_girl_default_image" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/baby_info_check_start_margin"
        android:layout_marginEnd="@dimen/baby_info_check_end_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/brownishGrey"
            android:textSize="25sp"
            android:fontFamily="@font/a_otf_shueimgostd_b"
            tools:text="ゆま" />

        <TextView
            android:id="@+id/honorific_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:gravity="start|bottom"
            android:textSize="@dimen/default_text_size"
            android:text="@string/honorific_title_girl"
            android:textColor="@color/brownishGrey" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/baby_info_check_start_margin"
        android:layout_marginEnd="@dimen/baby_info_check_end_margin"
        android:baselineAligned="false">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_left_portion"
            android:text="@string/full_name"
            android:fontFamily="@font/hirakakupro_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey" />

        <TextView
            android:id="@+id/full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_right_portion"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey"
            android:fontFamily="@font/hirakakupro_w3"
            tools:text="寺井 祐貴" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/user_info_divider_margin"
        android:background="@color/whiteFour" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/baby_info_check_start_margin"
        android:layout_marginEnd="@dimen/baby_info_check_end_margin"
        android:baselineAligned="false">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_left_portion"
            android:text="@string/full_name_kana"
            android:fontFamily="@font/hirakakupro_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey" />

        <TextView
            android:id="@+id/full_name_kana"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_right_portion"
            android:fontFamily="@font/hirakakupro_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey"
            tools:text="てらい ゆうき" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/user_info_divider_margin"
        android:background="@color/whiteFour" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/baby_info_check_start_margin"
        android:layout_marginEnd="@dimen/baby_info_check_end_margin"
        android:baselineAligned="false">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_left_portion"
            android:text="@string/gender"
            android:fontFamily="@font/hiragino_sans_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_right_portion"
            android:fontFamily="@font/hiragino_sans_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey"
            tools:text="@string/female" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/user_info_divider_margin"
        android:background="@color/whiteFour" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/baby_info_check_start_margin"
        android:layout_marginEnd="@dimen/baby_info_check_end_margin"
        android:baselineAligned="false">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_left_portion"
            android:text="@string/birthday"
            android:fontFamily="@font/hiragino_sans_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_right_portion"
            android:fontFamily="@font/hiragino_sans_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey"
            tools:text="2020年5月13日" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/user_info_divider_margin"
        android:background="@color/whiteFour" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/baby_info_check_start_margin"
        android:layout_marginEnd="@dimen/baby_info_check_end_margin"
        android:baselineAligned="false">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_left_portion"
            android:text="@string/birth_order"
            android:fontFamily="@font/hiragino_sans_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey" />

        <TextView
            android:id="@+id/birth_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_right_portion"
            android:fontFamily="@font/hiragino_sans_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey"
            tools:text="第1子" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/user_info_divider_margin"
        android:background="@color/whiteFour" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/baby_info_check_start_margin"
        android:layout_marginEnd="@dimen/baby_info_check_end_margin"
        android:baselineAligned="false">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_left_portion"
            android:text="@string/relationship"
            android:fontFamily="@font/hiragino_sans_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey" />

        <TextView
            android:id="@+id/sibling_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="@integer/user_info_right_portion"
            android:fontFamily="@font/hiragino_sans_w3"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/brownishGrey"
            tools:text="長女" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/user_info_divider_margin"
        android:background="@color/whiteFour" />

    <Button
        android:id="@+id/button_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/a_otf_shueimgostd_b"
        android:layout_marginStart="@dimen/baby_info_check_start_margin"
        android:layout_marginEnd="@dimen/baby_info_check_end_margin"
        android:background="@drawable/background_button_enable_disable_state"
        android:text="@string/to_edit"
        android:textColor="@color/whiteTwo" />

</LinearLayout>