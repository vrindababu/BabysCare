<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/red">

    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="@dimen/menu_icon_width"
        android:layout_height="@dimen/menu_icon_height"
        android:layout_marginTop="@dimen/menu_top_margin"
        android:contentDescription="@string/image"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        tools:src="@drawable/icon_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drawer_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/menu_padding_start"
        android:paddingEnd="10dp"
        tools:text="@string/account"
        android:textColor="@color/whiteTwo"
        android:textSize="@dimen/drawer_menu_text_size"
        app:layout_constraintBottom_toBottomOf="@id/drawer_item_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/drawer_item_icon"
        app:layout_constraintTop_toTopOf="@+id/drawer_item_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>